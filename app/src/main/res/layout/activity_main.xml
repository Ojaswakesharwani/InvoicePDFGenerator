<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Generate Pdf"
        />


    <!-- Invoice Title -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/invoice_view"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:orientation="vertical">

    <!-- Invoice Title -->
    <TextView
        android:id="@+id/tvInvoiceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoice"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_marginVertical="8dp"/>

    <!-- Invoice Details -->
    <TextView
        android:id="@+id/tvInvoiceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice No: 12345" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 31-03-2025"
        android:layout_marginBottom="10dp"/>

    <!-- Customer Details -->
    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer: John Doe" />

    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: 123 Street, City"
        android:layout_marginBottom="10dp"/>

    <!-- Table Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#DDDDDD">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:text="Item"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Qty"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Price"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="Total"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Product Items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="2"
            android:text="Product A" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="$50" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"

            android:text="$100" />
    </LinearLayout>

    <!-- Charges -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtotal: $100"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discount: -$10" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GST (18%): $16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Platform Fees: $5" />

    <!-- Final Total -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Payable: $111"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="end"
            android:src="@drawable/seal"/>



    </LinearLayout>


</LinearLayout>